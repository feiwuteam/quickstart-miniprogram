{
  "compilerOptions": {
    "module": "es6",
    "target": "es5",
    "skipLibCheck": true,
    "noImplicitAny": true,
    "sourceMap": true,
    "allowJs": true,
    "baseUrl": ".",
    "outDir": "dist",
    "paths": {
      "@/*": ["src/*"]
    }
  },
  "exclude": [
    "node_modules"
  ],
  "include": [
    "src/**/*"
  ],
  "lib": [
    "es5",
    "es6",
    "es2015.core",
    "es2015.collection",
    "es2015.iterable",
    "es2015.promise",
    "es2015.proxy",
    "es2015.reflect",
    "es2015.generator",
    "es2015.symbol",
    "es2015.symbol.wellknown",
    "es2016",
    "es2016.array.include",
    "es2017",
    "es2017.object",
    "es2017.sharedmemory",
    "scripthost"
  ]
}
